{
  "name": "reality-check",
  "version": "1.0.0",
  "private": true,
  "description": "A gamified task manager with RPG-style progression system",
  "keywords": ["task-manager", "gamification", "rpg", "productivity", "nextjs"],
  "author": "Reality Check Team",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "backend": "json-server --watch db.json --port 3001",
    "dev:full": "concurrently \"npm run backend\" \"npm run dev\"",
    "clean": "rm -rf .next out dist",
    "export": "next build && next export"
  },
  "dependencies": {
    "daisyui": "^5.0.50",
    "framer-motion": "^12.23.12",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "json-server": "^1.0.0-beta.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
